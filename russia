    }
    .question img {
      max-width: 100%;
      height: auto;
      display: block;
      margin: 10px auto;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .answers {
      list-style: none;
      padding: 0;
    }
    .answers li {
      margin: 8px 0;
    }
    button {
      margin-top: 10px;
      padding: 8px 14px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
      background-color: #4CAF50;
      color: white;
      transition: background-color 0.3s;
    }
    button:hover {
      background-color: #45a049;
    }
